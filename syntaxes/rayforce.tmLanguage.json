{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Rayforce",
  "scopeName": "source.rayforce",
  "patterns": [
    { "include": "#comment" },
    { "include": "#string" },
    { "include": "#quoted-symbol" },
    { "include": "#keyword-symbol" },
    { "include": "#null-literal" },
    { "include": "#infinity-nan" },
    { "include": "#guid-literal" },
    { "include": "#timestamp-literal" },
    { "include": "#date-literal" },
    { "include": "#time-literal" },
    { "include": "#hex-number" },
    { "include": "#float-number" },
    { "include": "#integer-number" },
    { "include": "#char-literal" },
    { "include": "#type-cast" },
    { "include": "#special-form" },
    { "include": "#query-keyword" },
    { "include": "#core-function" },
    { "include": "#builtin-constant" },
    { "include": "#special-variable" },
    { "include": "#function-call" },
    { "include": "#symbol-reference" },
    { "include": "#operator" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line.semicolon.rayforce",
          "match": ";.*$"
        }
      ]
    },
    "string": {
      "name": "string.quoted.double.rayforce",
      "begin": "\"",
      "end": "\"",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.rayforce" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.rayforce" }
      },
      "patterns": [
        {
          "name": "constant.character.escape.rayforce",
          "match": "\\\\(?:[nrt\\\\\"']|[0-7]{3})"
        },
        {
          "name": "constant.other.placeholder.rayforce",
          "match": "%"
        }
      ]
    },
    "quoted-symbol": {
      "patterns": [
        {
          "name": "constant.other.symbol.quoted.rayforce",
          "match": "'[a-zA-Z_][a-zA-Z0-9_\\-?!.]*"
        }
      ]
    },
    "keyword-symbol": {
      "patterns": [
        {
          "name": "constant.other.keyword.rayforce",
          "match": ":[a-zA-Z_][a-zA-Z0-9_\\-?!]*"
        }
      ]
    },
    "null-literal": {
      "patterns": [
        {
          "name": "constant.language.null.rayforce",
          "match": "\\b0N[0hditplgsfp]\\b|\\b::?\\b|\\bnil\\b"
        }
      ]
    },
    "infinity-nan": {
      "patterns": [
        {
          "name": "constant.language.infinity.rayforce",
          "match": "-?0[wW]"
        },
        {
          "name": "constant.language.nan.rayforce",
          "match": "\\b0[nN]\\b"
        }
      ]
    },
    "guid-literal": {
      "name": "constant.other.guid.rayforce",
      "match": "[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}"
    },
    "timestamp-literal": {
      "name": "constant.other.timestamp.rayforce",
      "match": "\\d{4}\\.\\d{2}\\.\\d{2}[DT]\\d{2}:\\d{2}:\\d{2}(?:\\.\\d+)?"
    },
    "date-literal": {
      "name": "constant.other.date.rayforce",
      "match": "\\d{4}\\.\\d{2}\\.\\d{2}(?![DT])"
    },
    "time-literal": {
      "name": "constant.other.time.rayforce",
      "match": "-?\\d{1,2}:\\d{2}:\\d{2}(?:\\.\\d+)?"
    },
    "hex-number": {
      "name": "constant.numeric.hex.rayforce",
      "match": "0x[0-9a-fA-F]+"
    },
    "float-number": {
      "name": "constant.numeric.float.rayforce",
      "match": "-?\\d+\\.\\d+(?:[eE][+-]?\\d+)?[fF]?"
    },
    "integer-number": {
      "name": "constant.numeric.integer.rayforce",
      "match": "-?\\d+[iIjJhHbBlL]?"
    },
    "char-literal": {
      "name": "constant.character.rayforce",
      "match": "'(?:\\\\[nrt\\\\'0-7]|[^'])'"
    },
    "type-cast": {
      "patterns": [
        {
          "name": "storage.type.rayforce",
          "match": "\\b(Timestamp|String|F64|I64|Bool|Symbol|Time|Date|Guid|Char|I32|F32|U64|U32|I16|U16|I8|U8|B8|C8|List|Table|Dict|Lambda)\\b"
        }
      ]
    },
    "special-form": {
      "patterns": [
        {
          "match": "(?<=\\()\\s*(fn|do|let|if|cond|when|unless|set|try|catch|return|exit|raise|throw|quote|and|or|def|defn|loop|recur)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "keyword.control.rayforce" }
          }
        }
      ]
    },
    "query-keyword": {
      "patterns": [
        {
          "match": "(?<=\\()\\s*(select|update|delete|insert|upsert|alter|modify)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "keyword.other.dml.rayforce" }
          }
        },
        {
          "name": "keyword.other.clause.rayforce",
          "match": "\\b(from|where|by|take|into|as)(?=\\s*:)"
        }
      ]
    },
    "core-function": {
      "patterns": [
        {
          "comment": "Collection functions",
          "match": "(?<=\\()\\s*(list|enlist|table|dict|first|last|count|reverse|distinct|raze|concat|remove|filter|take|drop|til|row|key|value|keys|values|flip|get|at|in|within|sect|except|union|find|group|ungroup|enum|xbar|split|bin|binr)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.collection.rayforce" }
          }
        },
        {
          "comment": "Aggregation functions",
          "match": "(?<=\\()\\s*(sum|avg|med|dev|var|min|max|count|all|any|prod|wavg|wsum|cov|cor|first|last|sums|prds|mins|maxs|avgs|msum|mcount|mavg|mmin|mmax)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.aggregate.rayforce" }
          }
        },
        {
          "comment": "Math functions",
          "match": "(?<=\\()\\s*(abs|neg|floor|ceil|round|sqrt|exp|log|sin|cos|tan|asin|acos|atan|signum|mod|div|reciprocal)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.math.rayforce" }
          }
        },
        {
          "comment": "Order/Sort functions",
          "match": "(?<=\\()\\s*(asc|desc|iasc|idesc|rank|xasc|xdesc|xrank|sort)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.order.rayforce" }
          }
        },
        {
          "comment": "Higher-order functions",
          "match": "(?<=\\()\\s*(apply|map|pmap|fold|scan|map-left|map-right|fold-left|fold-right|scan-left|scan-right|each|peach|over|converge)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.higher-order.rayforce" }
          }
        },
        {
          "comment": "Join functions",
          "match": "(?<=\\()\\s*(left-join|inner-join|asof-join|window-join|lj|ij|aj|wj|uj|pj)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.join.rayforce" }
          }
        },
        {
          "comment": "IO functions",
          "match": "(?<=\\()\\s*(read|write|read-csv|write-csv|hopen|hclose|load|save|set-splayed|get-splayed|set-parted|get-parted|system)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.io.rayforce" }
          }
        },
        {
          "comment": "Type/Meta functions",
          "match": "(?<=\\()\\s*(type|meta|parse|eval|format|show|print|println|ser|de|resolve|nil\\?|null\\?|empty\\?|atom\\?|list\\?)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.meta.rayforce" }
          }
        },
        {
          "comment": "Date/Time functions",
          "match": "(?<=\\()\\s*(date|time|timestamp|guid|year|month|mm|dd|hh|mi|ss|ms)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.datetime.rayforce" }
          }
        },
        {
          "comment": "String functions",
          "match": "(?<=\\()\\s*(lower|upper|trim|ltrim|rtrim|like|ss|ssr|vs|sv)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.string.rayforce" }
          }
        },
        {
          "comment": "Random functions",
          "match": "(?<=\\()\\s*(rand|deal|roll)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.random.rayforce" }
          }
        },
        {
          "comment": "System functions",
          "match": "(?<=\\()\\s*(env|gc|args|timer|sysinfo|memstat|timeit|loadfn|internals)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.system.rayforce" }
          }
        },
        {
          "comment": "Logic functions",
          "match": "(?<=\\()\\s*(not|unify|diverse)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "support.function.logic.rayforce" }
          }
        }
      ]
    },
    "builtin-constant": {
      "patterns": [
        {
          "name": "constant.language.boolean.rayforce",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "special-variable": {
      "patterns": [
        {
          "name": "variable.language.self.rayforce",
          "match": "\\bself\\b"
        },
        {
          "name": "variable.language.it.rayforce",
          "match": "\\bit\\b"
        },
        {
          "name": "variable.other.global.rayforce",
          "match": "\\.[a-zA-Z_][a-zA-Z0-9_\\-?!.]*"
        }
      ]
    },
    "function-call": {
      "patterns": [
        {
          "match": "(?<=\\()\\s*([a-zA-Z_][a-zA-Z0-9_\\-?!]*)(?=\\s|\\)|$)",
          "captures": {
            "1": { "name": "entity.name.function.rayforce" }
          }
        }
      ]
    },
    "symbol-reference": {
      "patterns": [
        {
          "name": "variable.other.rayforce",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_\\-?!]*\\b"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.rayforce",
          "match": "==|!=|<>|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.rayforce",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.logical.rayforce",
          "match": "[&|!~^]"
        },
        {
          "name": "keyword.operator.assignment.rayforce",
          "match": ":"
        },
        {
          "name": "keyword.operator.dict.rayforce",
          "match": "!"
        },
        {
          "name": "keyword.operator.apply.rayforce",
          "match": "@"
        },
        {
          "name": "keyword.operator.compose.rayforce",
          "match": "\\."
        },
        {
          "name": "keyword.operator.project.rayforce",
          "match": "#"
        },
        {
          "name": "keyword.operator.question.rayforce",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.each.rayforce",
          "match": "'"
        },
        {
          "name": "keyword.operator.underscore.rayforce",
          "match": "_"
        },
        {
          "name": "keyword.operator.dollar.rayforce",
          "match": "\\$"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.section.parens.begin.rayforce",
          "match": "\\("
        },
        {
          "name": "punctuation.section.parens.end.rayforce",
          "match": "\\)"
        },
        {
          "name": "punctuation.section.brackets.begin.rayforce",
          "match": "\\["
        },
        {
          "name": "punctuation.section.brackets.end.rayforce",
          "match": "\\]"
        },
        {
          "name": "punctuation.section.braces.begin.rayforce",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.braces.end.rayforce",
          "match": "\\}"
        },
        {
          "name": "punctuation.separator.rayforce",
          "match": "[;,]"
        }
      ]
    }
  }
}


