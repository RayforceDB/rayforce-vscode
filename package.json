{
  "name": "rayforce-vscode",
  "displayName": "RayforceDB",
  "description": "Runtime Manager for RayforceDB",
  "version": "0.1.0",
  "publisher": "RayforceDB",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/RayforceDB/rayforce-vscode"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "keywords": [
    "rayforce",
    "rayforcedb",
    "database",
    "timeseries",
    "columnar",
    "rayfall",
    "repl",
    "lisp"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:rayforce",
    "onView:rayforceInstances"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rayforce",
        "aliases": ["Rayforce", "rayforce"],
        "extensions": [".rfl", ".rf"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rayforce",
        "scopeName": "source.rayforce",
        "path": "./syntaxes/rayforce.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rayforce-explorer",
          "title": "Rayforce",
          "icon": "assets/logo.svg"
        }
      ]
    },
    "views": {
      "rayforce-explorer": [
        {
          "id": "rayforceInstances",
          "name": "Instances"
        },
        {
          "type": "webview",
          "id": "rayforceProcessInfo",
          "name": "Process Info"
        }
      ]
    },
    "commands": [
      {
        "command": "rayforce.refreshInstances",
        "title": "Refresh",
        "category": "Rayforce",
        "icon": "$(refresh)"
      },
      {
        "command": "rayforce.connectToInstance",
        "title": "Connect",
        "category": "Rayforce",
        "icon": "$(plug)"
      },
      {
        "command": "rayforce.connectToRemote",
        "title": "Connect to Remote",
        "category": "Rayforce",
        "icon": "$(plug)"
      },
      {
        "command": "rayforce.addRemote",
        "title": "Add Remote",
        "category": "Rayforce",
        "icon": "$(add)"
      },
      {
        "command": "rayforce.removeRemote",
        "title": "Remove Remote",
        "category": "Rayforce",
        "icon": "$(trash)"
      },
      {
        "command": "rayforce.disconnectFromInstance",
        "title": "Disconnect",
        "category": "Rayforce",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "rayforce.openRepl",
        "title": "Open REPL",
        "category": "Rayforce",
        "icon": "$(terminal)"
      },
      {
        "command": "rayforce.executeSelection",
        "title": "Execute Selection in RayforceDB Instance",
        "category": "Rayforce",
        "icon": "$(play)"
      }
    ],
    "keybindings": [
      {
        "command": "rayforce.executeSelection",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == rayforce"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "rayforce.executeSelection",
          "when": "editorLangId == rayforce",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "rayforce.addRemote",
          "when": "view == rayforceInstances",
          "group": "navigation"
        },
        {
          "command": "rayforce.openRepl",
          "when": "view == rayforceInstances",
          "group": "navigation"
        },
        {
          "command": "rayforce.refreshInstances",
          "when": "view == rayforceInstances",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "rayforce.openRepl",
          "when": "view == rayforceInstances && viewItem == rayforceInstance",
          "group": "inline"
        },
        {
          "command": "rayforce.connectToInstance",
          "when": "view == rayforceInstances && viewItem == rayforceInstance",
          "group": "inline"
        },
        {
          "command": "rayforce.openRepl",
          "when": "view == rayforceInstances && viewItem == rayforceInstanceConnected",
          "group": "inline"
        },
        {
          "command": "rayforce.disconnectFromInstance",
          "when": "view == rayforceInstances && viewItem == rayforceInstanceConnected",
          "group": "inline"
        },
        {
          "command": "rayforce.openRepl",
          "when": "view == rayforceInstances && viewItem == rayforceRemote",
          "group": "inline"
        },
        {
          "command": "rayforce.connectToRemote",
          "when": "view == rayforceInstances && viewItem == rayforceRemote",
          "group": "inline"
        },
        {
          "command": "rayforce.removeRemote",
          "when": "view == rayforceInstances && viewItem == rayforceRemote",
          "group": "inline"
        },
        {
          "command": "rayforce.openRepl",
          "when": "view == rayforceInstances && viewItem == rayforceRemoteConnected",
          "group": "inline"
        },
        {
          "command": "rayforce.disconnectFromInstance",
          "when": "view == rayforceInstances && viewItem == rayforceRemoteConnected",
          "group": "inline"
        },
        {
          "command": "rayforce.removeRemote",
          "when": "view == rayforceInstances && viewItem == rayforceRemoteConnected",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  }
}
