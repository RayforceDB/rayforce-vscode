{
  "name": "rayforce-vscode",
  "displayName": "RayforceDB",
  "description": "Runtime Manager for RayforceDB",
  "version": "0.3.0",
  "publisher": "RayforceDB",
  "icon": "assets/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/RayforceDB/rayforce-vscode"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "keywords": [
    "rayforce",
    "rayforcedb",
    "database",
    "timeseries",
    "columnar",
    "rayfall",
    "repl",
    "lisp"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:rayfall",
    "onView:rayforceInstances",
    "onView:rayforceSavedInstances"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rayfall",
        "aliases": ["Rayfall", "rayfall"],
        "extensions": [".rfl", ".rf"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./assets/icon-light.svg",
          "dark": "./assets/icon-dark.svg"
        }
      }
    ],
    "fileAssociations": [
      {
        "pattern": "*.rf",
        "icon": {
          "light": "./assets/icon-light.svg",
          "dark": "./assets/icon-dark.svg"
        }
      },
      {
        "pattern": "*.rfl",
        "icon": {
          "light": "./assets/icon-light.svg",
          "dark": "./assets/icon-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "rayfall",
        "scopeName": "source.rayfall",
        "path": "./syntaxes/rayfall.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rayforce-explorer",
          "title": "Rayforce",
          "icon": "assets/logo_black.svg"
        }
      ]
    },
    "views": {
      "rayforce-explorer": [
        {
          "id": "rayforceInstances",
          "name": "Instances"
        },
        {
          "id": "rayforceSavedInstances",
          "name": "Saved Instances"
        },
        {
          "type": "webview",
          "id": "rayforceProcessInfo",
          "name": "Process Info"
        }
      ]
    },
    "commands": [
      {
        "command": "rayforce.refreshInstances",
        "title": "Refresh",
        "category": "Rayforce",
        "icon": "$(refresh)"
      },
      {
        "command": "rayforce.connectToInstance",
        "title": "Connect",
        "category": "Rayforce",
        "icon": "$(plug)"
      },
      {
        "command": "rayforce.connectToSavedInstance",
        "title": "Connect",
        "category": "Rayforce",
        "icon": "$(plug)"
      },
      {
        "command": "rayforce.addSavedInstance",
        "title": "Add Instance",
        "category": "Rayforce",
        "icon": "$(add)"
      },
      {
        "command": "rayforce.removeSavedInstance",
        "title": "Remove Instance",
        "category": "Rayforce",
        "icon": "$(trash)"
      },
      {
        "command": "rayforce.createFolder",
        "title": "Create Folder",
        "category": "Rayforce",
        "icon": "$(new-folder)"
      },
      {
        "command": "rayforce.renameFolder",
        "title": "Rename Folder",
        "category": "Rayforce",
        "icon": "$(edit)"
      },
      {
        "command": "rayforce.deleteFolder",
        "title": "Delete Folder",
        "category": "Rayforce",
        "icon": "$(trash)"
      },
      {
        "command": "rayforce.saveInstanceToFolder",
        "title": "Save Instance",
        "category": "Rayforce",
        "icon": "$(vm)"
      },
      {
        "command": "rayforce.disconnectFromInstance",
        "title": "Disconnect",
        "category": "Rayforce",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "rayforce.openRepl",
        "title": "Open REPL",
        "category": "Rayforce",
        "icon": "$(terminal)"
      },
      {
        "command": "rayforce.executeSelection",
        "title": "Execute Selection in RayforceDB Instance",
        "category": "Rayforce",
        "icon": "$(play)"
      }
    ],
    "keybindings": [
      {
        "command": "rayforce.executeSelection",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus && editorLangId == rayfall"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "rayforce.executeSelection",
          "when": "editorLangId == rayfall",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "rayforce.refreshInstances",
          "when": "view == rayforceInstances",
          "group": "navigation"
        },
        {
          "command": "rayforce.addSavedInstance",
          "when": "view == rayforceSavedInstances",
          "group": "navigation"
        },
        {
          "command": "rayforce.createFolder",
          "when": "view == rayforceSavedInstances",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "rayforce.connectToInstance",
          "when": "view == rayforceInstances && viewItem == rayforceInstance",
          "group": "inline"
        },
        {
          "command": "rayforce.disconnectFromInstance",
          "when": "view == rayforceInstances && viewItem == rayforceInstanceConnected",
          "group": "inline"
        },
        {
          "command": "rayforce.connectToSavedInstance",
          "when": "view == rayforceSavedInstances && viewItem == savedInstance",
          "group": "inline"
        },
        {
          "command": "rayforce.removeSavedInstance",
          "when": "view == rayforceSavedInstances && viewItem == savedInstance",
          "group": "inline"
        },
        {
          "command": "rayforce.disconnectFromInstance",
          "when": "view == rayforceSavedInstances && viewItem == savedInstanceConnected",
          "group": "inline"
        },
        {
          "command": "rayforce.saveInstanceToFolder",
          "when": "view == rayforceSavedInstances && viewItem == savedInstanceConnected",
          "group": "inline"
        },
        {
          "command": "rayforce.removeSavedInstance",
          "when": "view == rayforceSavedInstances && viewItem == savedInstanceConnected",
          "group": "inline"
        },
        {
          "command": "rayforce.createFolder",
          "when": "view == rayforceSavedInstances && viewItem == savedFolder",
          "group": "1_actions"
        },
        {
          "command": "rayforce.saveInstanceToFolder",
          "when": "view == rayforceSavedInstances && viewItem == savedFolder",
          "group": "2_actions"
        },
        {
          "command": "rayforce.renameFolder",
          "when": "view == rayforceSavedInstances && viewItem == savedFolder",
          "group": "3_actions"
        },
        {
          "command": "rayforce.deleteFolder",
          "when": "view == rayforceSavedInstances && viewItem == savedFolder",
          "group": "4_actions"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0"
  }
}
